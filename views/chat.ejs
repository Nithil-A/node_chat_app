<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat App</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .chat-container {
            display: flex;
            justify-content: space-between;
            height: 100vh;
            padding: 20px;
        }
        .sidebar {
            width: 250px;
            background-color: #f8f9fa;
            padding: 10px;
            overflow-y: auto;
        }
        .chat {
            flex: 1;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            overflow-y: auto;
        }
        .message-input {
            margin-top: 10px;
            display: flex;
        }
        .message-input input {
            flex: 1;
            margin-right: 10px;
        }

        ul { list-style-type: none; padding: 0; }
        li { padding: 8px; margin-bottom: 10px; background: #f4f4f4; border-radius: 4px; max-width: 60%; }
        .message { margin-bottom: 20px; }
        .sender { background: #ddf; text-align: right; margin-left: auto; }
        .recipient { background: #fdd; text-align: left; margin-right: auto; }
        .user-list { margin-bottom: 20px; }
        #chat { display: none; }
    

    </style>
</head>
<body>
    <div class="container-fluid chat-container">
        <div class="sidebar">
            <h5>Chats</h5>
            <ul class="list-group">
                <% if (users && users.length > 0) { %>
                    <% users.forEach(user => { %>
                      <li class="list-group-item">
                        <a href="/api/chat/<%= user.id %>"><%= user.name %></a>
                      </li>
                    <% }); %>
                <% } else { %>
                    <li class="list-group-item">No users found.</li>
                <% } %>
            </ul>
        </div>
        <div class="chat">       
            <div id="chatBoxEmpty">
                <p>Select a user to start chatting.</p>
            </div>   
            <div id="chatBoxMessage" style="display: none;">
                <h3>Chat with <span id="chatWith"></span></h3>
                
                <ul id="messages"></ul>

                <form id="messageForm" action="" method="post">
                    <div class="message-input">
                        <input type="text" name="message" id="message" placeholder="Type your message..." required>
                        <button type="button" class="btn btn-primary">Send</button>
                    </div>
                </form>
            </div>              
        </div>
        <div class="sidebar">
            <h5>All Users</h5>
            <ul class="list-group">
                <% if (users && users.length > 0) { %>
                    <% users.forEach(user => { %>
                      <li class="list-group-item" onclick="selectUser(`<%= user.name %>`, `<%= user.id %>`)">
                        <%= user.name %>
                      </li>
                    <% }); %>
                <% } else { %>
                    <li class="list-group-item">No users found.</li>
                <% } %>
            </ul>
        </div>
    </div>
    <script src="/socket.io/socket.io.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        
</body>
</html>
